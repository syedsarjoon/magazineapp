<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/backgroundspaceimg">
       <Button
           android:id="@+id/subcribe_btn"
           android:layout_width="150dp"
           android:layout_height="45dp"
           android:layout_marginTop="190dp"
           android:text="Subscribe to E Flip"
           android:textStyle="italic"
           android:background="@drawable/btn_rounded"></Button>

       <Button
           android:id="@+id/campuss_amb"
           android:layout_width="150dp"
           android:layout_height="45dp"
           android:background="@drawable/btn_rounded"
           android:text="Campus Ambassador"
           android:textStyle="italic"
           android:layout_marginTop="6dp"
           android:layout_below="@+id/subcribe_btn"
           android:layout_toEndOf="@+id/subcribe_btn"
           android:layout_toRightOf="@+id/subcribe_btn"></Button>

       <Button
           android:id="@+id/publish_btn"
           android:layout_width="150dp"
           android:layout_height="45dp"
           android:background="@drawable/btn_rounded"
           android:text="Publish Your Article here"
           android:textStyle="italic"
           android:layout_below="@id/campuss_amb"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="220dp"></Button>

       <Button
           android:id="@+id/quiz_btn"
           android:layout_width="150dp"
           android:layout_height="45dp"
           android:text="QUIZ"
           android:textStyle="italic"
           android:textSize="16dp"
           android:layout_marginTop="350dp"
           android:layout_toRightOf="@id/subcribe_btn"
           android:background="@drawable/btn_rounded"></Button>

       <Button
           android:id="@+id/ad_btn"
           android:layout_width="150dp"
           android:layout_height="45dp"
           android:background="@drawable/btn_rounded"
           android:text="Advertise With E Flip"
           android:layout_below="@+id/intern"
           android:textStyle="italic"
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@id/subcribe_btn"></Button>


       <Button
           android:id="@+id/intern"
           android:layout_width="150dp"
           android:layout_height="45dp"
           android:background="@drawable/btn_rounded"
           android:text="Internships"
           android:textStyle="italic"
           android:layout_below="@+id/quiz_btn"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="220dp"></Button>



       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar"
           android:background="@color/colorPrimary"
           android:theme="@style/ThemeOverlay.AppCompat.Dark"
           android:layout_width="match_parent"
           android:layout_height="?attr/actionBarSize">


       </androidx.appcompat.widget.Toolbar>
       <ImageView
           android:layout_width="220dp"
           android:layout_height="230dp"
           android:src="@drawable/pcsartefliplogo"
           android:layout_marginLeft="13dp"></ImageView>
       <ImageView
           android:layout_width="150dp"
           android:layout_height="130dp"
           android:src="@drawable/eflipmagbook"
           android:layout_marginTop="250dp"
           android:layout_marginLeft="10dp"></ImageView>
   </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="500dp"/>

</androidx.drawerlayout.widget.DrawerLayout>
